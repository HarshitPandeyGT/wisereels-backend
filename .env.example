# ============================================
# WiseReels Backend Environment Configuration
# ============================================

# Node Environment
NODE_ENV=development
PORT=3000

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wisereels
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# ============================================
# CACHING CONFIGURATION (Optional)
# ============================================
# Redis is OPTIONAL. If REDIS_URL is not provided, the app will use in-memory caching.
# 
# For Redis, provide REDIS_URL in one of these formats:
#   - redis://[:password@]host:port[/db]
#   - rediss://[:password@]host:port[/db]  (with TLS)
#
# Examples:
#   REDIS_URL=redis://localhost:6379
#   REDIS_URL=redis://:password@localhost:6379/0
#   REDIS_URL=redis://default:password@cloud-redis-instance.a1b2c3.redis.gcp.com:6379
#
# If not provided, app will automatically use in-memory cache (node-cache)
# REDIS_URL=redis://localhost:6379

# ============================================
# Legacy Redis Configuration (Deprecated)
# Use REDIS_URL above instead
# ============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# ============================================
# TWILIO SMS CONFIGURATION
# (Required for OTP functionality)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# DEVELOPMENT: Bypass Twilio and use hardcoded OTP '123456'
# Set to 'true' to skip SMS sending (testing only)
BYPASS_OTP=false

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info

# ============================================
# GCP DEPLOYMENT CONFIGURATION
# (Uncomment and configure for GCP Cloud Run)
# ============================================
# DATABASE_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
# DATABASE_PASSWORD=your_app_db_password_from_gcp
# REDIS_HOST=your_redis_host_from_gcp
